<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/CfgTxtServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/CfgLblServidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtServidor"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/CfgTxtServidor"
        android:layout_toLeftOf="@+id/CfgTxtServidor"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblServidor"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/CfgTxtPuerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/CfgTxtServidor"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/CfgTxtModulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/CfgTxtPuerto"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/CfgTxtWebService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CfgTxtModulo"
        android:layout_toRightOf="@+id/CfgLblServidor"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/CfgTxtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/CfgTxtWebService"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/CfgTxtEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CfgTxtVersion"
        android:layout_toRightOf="@+id/CfgLblServidor"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/CfgTxtCedula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CfgTxtEquipo"
        android:layout_toRightOf="@+id/CfgLblServidor"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/CfgTxtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CfgTxtCedula"
        android:layout_toRightOf="@+id/CfgLblServidor"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/CfgLblPuerto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtPuerto"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblServidor"
        android:layout_alignTop="@+id/CfgTxtPuerto"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblPuerto"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblModulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtModulo"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblPuerto"
        android:layout_alignTop="@+id/CfgTxtModulo"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblModulo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblWebService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtWebService"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblModulo"
        android:layout_alignTop="@+id/CfgTxtWebService"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblWebService"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtVersion"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblWebService"
        android:layout_alignTop="@+id/CfgTxtVersion"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblVersion"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/CfgCmbImpresora"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/CfgTxtNombre"
        android:layout_below="@+id/CfgTxtNombre" />

    <Button
        android:id="@+id/CfgBtnGuardar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CfgCmbImpresora"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/CfgBtnGuardar" />

    <TextView
        android:id="@+id/CfgLblEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtEquipo"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblVersion"
        android:layout_below="@+id/CfgLblVersion"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblEquipo"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblCedula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgTxtCedula"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblEquipo"
        android:layout_below="@+id/CfgLblEquipo"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblCedula"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CfgCmbImpresora"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblCedula"
        android:layout_below="@+id/CfgLblCedula"
        android:gravity="right|center_vertical"
        android:text="@string/CfgLblNombre"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/CfgLblImpresora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CfgCmbImpresora"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/CfgLblNombre"
        android:layout_alignTop="@+id/CfgCmbImpresora"
        android:gravity="right|center_vertical"
        android:text="@string/CfglblImpresora"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
