<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical" >         
	
	<TextView
	     android:id="@+id/ContadorLblTitulo"
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_weight="1"
	     android:gravity="center_vertical|center_horizontal"
	     android:text="@string/ContadorLblTitulo"
	     android:textSize="@dimen/Text8pts"
	     android:textStyle="bold" />        
	     
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">
        
        <LinearLayout 
          android:layout_width="0dp"
	      android:layout_height="match_parent"
	      android:layout_weight="2"></LinearLayout>
        
        
        <EditText
	        android:id="@+id/BuscarMarca"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:hint="Buscar Marca"
	        android:alpha="0.3"
	        android:inputType="text" />
        
     </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblMarca"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblMarca"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
	        android:id="@+id/ContadorCmbMarca"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7" />        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblTipo"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblTipo"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
	        android:id="@+id/ContadorCmbTipo"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblSerie"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblSerie"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
	        android:id="@+id/ContadorTxtSerie"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7"
	        android:inputType="text" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblLectura1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblLectura1"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	
	    <EditText
	        android:id="@+id/ContadorTxtLectura1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
			android:layout_weight="7"
	        android:inputType="numberSigned" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblLectura2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblLectura2"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <EditText
	        android:id="@+id/ContadorTxtLectura2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7"
	        android:inputType="numberSigned" />        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/ContadorLblLectura3"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3"
	        android:gravity="right|center_vertical"
	        android:text="@string/ContadorLblLectura3"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <EditText
	        android:id="@+id/ContadorTxtLectura3"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="7"
	        android:inputType="numberDecimal" />
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="10">
        
        <Button
	        android:id="@+id/ContadorBtnRegistrar"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3.5"
	        android:text="@string/ContadorBtnRegistrar" />
	
	    <Button
	        android:id="@+id/ContadorBtnEliminar"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3.5"
	        android:text="@string/ContadorBtnEliminar" />
        
    </LinearLayout>
    
