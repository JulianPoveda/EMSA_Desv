   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/IntegracionLblLecturaFin"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="right|center_vertical"
	        android:text="@string/IntegracionLblLecturaFin"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <EditText
	        android:id="@+id/IntegracionTxtLecturaFin"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="numberDecimal" />        
    </LinearLayout>
	
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">
        
        <TextView
	        android:id="@+id/IntegracionLblKd"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="right|center_vertical"
	        android:text="@string/IntegracionLblKd"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <EditText
	        android:id="@+id/IntegracionTxtKd"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="6"
	        android:inputType="numberDecimal" />
        
    </LinearLayout>
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="10">
        
        <Button
	        android:id="@+id/IntegracionBtnRegistrar"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3.5"
	        android:text="@string/IntegracionBtnRegistrar" />
	
	    <Button
	        android:id="@+id/IntegracionBtnEliminar"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="3.5"
	        android:text="@string/IntegracionBtnEliminar" />
        
    </LinearLayout>
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/LabelConsumoAnterior"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="bottom"
	        android:layout_weight="4"
	        android:gravity="bottom"
	        android:textStyle="bold" 
	        android:text="@string/ConsumoAnterior" />
	    
	    <TextView
	        android:id="@+id/ConsumoAnterior"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="bottom" />
	    
	</LinearLayout>
	
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
	    
	    <TextView
	        android:id="@+id/LabelConsumoEstimado"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="bottom"
	        android:textStyle="bold" 
	        android:text="@string/ConsumoEstimado" />
	    
	    <TextView
	        android:id="@+id/ConsumoEstimado"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="4"
	        android:gravity="bottom" />
	    
	</LinearLayout>
        
    

</LinearLayout>
